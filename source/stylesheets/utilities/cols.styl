@require 'variables';
/*
cols
====================================================================== */

cols($gutter) {
    .cols {
        margin: 0 ($gutter * -1) 0 0;

        &::after {
            content: "";
            display: table;
            clear: both;
        }
    }

    .col {
        box-sizing: border-box;
        float: left;
        min-height: 1px;
        padding-right: $gutter;
    }

    .cols-half {
        > .col {
            width: cols-wide(3);
        }
    }

    .cols-third {
        > .col {
            width: cols-wide(2);
        }

        > .col-x2 {
            width: cols-wide(4);
        }
    }
}

@media $media-query-680-and-up {
    cols($grid-gutter-width);


    for $num in (1..$grid-column-total) {
        .col-{$num}{
            width: cols-wide($num)
        }
    }

}

@media $media-query-960-and-up {
    cols($grid-gutter-width-wide);


    for $num in (1..$grid-column-total) {
        .col-{$num}{
            width: cols-wide($num)
        }
    }

}
