@require '../../includes/variables';
@require '../../includes/extends';
/*
Headings
====================================================================== */

h1, h2 {
    margin: 0 0 $grid-gutter-width 0;
    font-family: $heading-font-family;
    font-weight: normal;
    line-height: 1.2;
    text-transform: uppercase;

    theme({
        color: $theme-headings
    })
}

h3, h4, h5, h6 {
    margin: 0 0 $grid-gutter-width;
    padding: 0.2em 0; // padding tries to mimic line height on regular text
    font-weight: bold;
    line-height: 1.5;
}

h1 {
    set-font-size(36px);
}

h2 {
    set-font-size(28px);
}

h3 {
    set-font-size(22px);
}

h4 {
    set-font-size(18px);
}

h5 {
    set-font-size(16px);
}

h6 {
    set-font-size(14px);
}

@media print {
    h1, h2, h3, h4, h5, h6 {
        @extends $print-plain;
    }
}

/*
Links
====================================================================== */
a {
    text-decoration: none;

    theme({
        color: $theme-links
    })
}

a:hover,
a:focus,
a:active {
    text-decoration: underline;
}

@media print {
    a {
        @extends $print-plain;

        &[href^='http'] { // print links on page for off site links
            text-decoration: underline !important;
            word-wrap: break-word;

            &::after {
                content:" (" attr(href) ") " !important;
                //one of our fonts doesn't have lower case characters
                // turn out URLs are case sensative
                font-family: sans-serif !important;
                font-size: 0.8em !important;
                text-transform: none;
            }
        }

        &[href^='mailto'] {
            // email addresses should still stand out
            // when writing content we tried to make all mailto links explictly show the address
            text-decoration: underline !important;
        }
    }
}

/*
sub and sup
====================================================================== */
sub,
sup {
  font-size: 75%;
  line-height: 0;
  position: relative;
  vertical-align: baseline;
}

sub {
  bottom: -0.25em;
}

sup {
  top: -0.5em;
}
